<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/thuong"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="316dp"
        android:layout_toEndOf="@+id/tich"
        android:text="Thương" />

    <Button
        android:id="@+id/tich"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="318dp"
        android:layout_toEndOf="@+id/hieu"
        android:text="Tích" />

    <Button
        android:id="@+id/hieu"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="320dp"
        android:layout_toEndOf="@+id/tong"
        android:text="Hiệu" />

    <Button
        android:id="@+id/tong"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="320dp"
        android:text="Tổng" />

    <EditText
        android:id="@+id/editText_Kq"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/editText_B"
        android:layout_marginStart="100dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/text_kq"
        android:ems="10"
        android:inputType="text"
        android:text="0" />

    <EditText
        android:id="@+id/editText_A"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="90dp"
        android:layout_toEndOf="@+id/text_A"
        android:ems="10"
        android:inputType="text"
        android:text="0" />

    <TextView
        android:id="@+id/text_kq"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/text_B"
        android:layout_marginTop="30dp"
        android:gravity="center|start"
        android:text="Kết quả" />

    <TextView
        android:id="@+id/text_B"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/text_A"
        android:layout_marginTop="30dp"
        android:gravity="center|start"
        android:text="Nhập b" />

    <TextView
        android:id="@+id/text_A"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:gravity="center|start"
        android:text="Nhập a" />

    <TextView
        android:id="@+id/label_title"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="121dp"
        android:gravity="center"
        android:text="Calculator"
        android:textColor="#8BC34A"
        android:textColorLink="#8BC34A"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText_B"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/editText_A"
        android:layout_marginStart="100dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/text_B"
        android:ems="10"
        android:inputType="text"
        android:text="0" />

</RelativeLayout>